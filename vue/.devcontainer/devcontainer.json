{
  "name": "Hinav-Vue",
  "context": ".",
  "dockerFile": "./Dockerfile",
  "remoteUser": "node",
  "containerUser": "node",
  "forwardPorts": [3000],
  "mounts": [
    "source=node_modules_hinav_dev,target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-auth,target=/home/node/.claude,type=volume"
  ],
  "postCreateCommand": "/workspaces/hinagiku-viewer/vue/.devcontainer/post.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "azemoh.one-monokai",
        "mhutchie.git-graph",
        "Vue.volar",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        "hollowtree.vue-snippets",
        "saoudrizwan.claude-dev",
        "MS-CEINTL.vscode-language-pack-ja"
      ]
    }
  },
  "containerEnv": {
    "CHOKIDAR_USEPOLLING": "true",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude"
  }
}
